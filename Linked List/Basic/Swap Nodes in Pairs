/*class Node {

        int data;
        Node next;

        Node(int d) {
            data = d;
            next = null;
        }
    } */
class Solution {
    public Node pairwiseSwap(Node head) {
        // code here
        Node curr = head;
        while (curr!= null && curr.next!= null){
            // Swap pairs
            int temp = curr.data;
            curr.data = curr.next.data;
            curr.next.data = temp;
            
            // Now, Move to the next pair
            curr = curr.next.next;
        }
        return curr;
    }
}
